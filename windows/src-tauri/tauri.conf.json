{
  "$schema": "https://schema.tauri.app/config/1.5.0",
  "package": {
    "productName": "Sleak",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../public",
    "distDir": "../public"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "allowlist": {
      "shell": {
        "all": false
      },
      "window": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.sleak.windows",
      "windows": {
        "wix": {
          "language": [
            "en-US"
          ]
        }
      }
    },
    "windows": [
      {
        "label": "overlay",
        "title": "Sleak Overlay",
        "width": 1280,
        "height": 720,
        "fullscreen": false,
        "resizable": true,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
